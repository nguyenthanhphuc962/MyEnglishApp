<% provide(:title, "All users") %>
<h1 class="center">All Users</h1>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<ul id="index users">
			<% @users.each do |user| %>
			<li>
				<%= image_tag user.avatar, class: "users" %>
				<span><%= link_to user.name, user_path(user) %></span>
				<br><br>
				<div class="border" ></div>
			</li>
			<% end %>
		</ul>


	</div>
</div>


