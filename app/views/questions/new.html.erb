<% provide(:title, "Adding Question") %>
<h1 class="center">Adding Question </h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for([@exam, @exam.questions.build]) do |f| %>
			<%= f.label :content %>
			<%= f.text_field :content, class: "form-control" %>
			<br>
			<%= f.submit "Adding Question", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>