<% provide(:title, "New Exam") %>
<h1 class="center">Create Exam</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@exam) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>

			<%= f.label :time %>
			<%= f.number_field :time, class: "form-control" %>
			<br>
			<%= f.submit "Create Exam", class: "btn btn-primary" %>

		<% end %>

	</div>
</div>